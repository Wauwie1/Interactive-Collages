<Window x:Class="InteractiveCollages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveCollages"
        xmlns:views="clr-namespace:InteractiveCollages.Views"
        mc:Ignorable="d"
        Title="Interactive" Height="720" Width="1280" WindowState="Maximized" WindowStyle="None" Background="Black" ResizeMode="NoResize"  >
    <Grid>
        
        <!--Element for displaying views-->
        <ContentControl x:Name="ViewControl" Content="{Binding}" Width="720" Height="720"/>
    </Grid>
</Window>
